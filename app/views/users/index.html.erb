
<h1>Search Powered by Elasticsearch</h1>
<h2>Users Count: <%= @total_users_count %></h2>

<%= form_with(url: users_path, local: true, method: :get) do |f| %>
  <%= f.text_field(:query) %>
  <%= f.submit("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Phone No</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.phone_no %></td>
        <td><%= user.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination">
  <%== pagy_nav(@pagy) %>
</div>


